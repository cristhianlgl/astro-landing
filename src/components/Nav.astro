---
import ButtonLink from "./ButtonLink.astro";
---
<nav class="w-[90%] h-20 m-auto overflow-hidden max-w-screen-xl flex items-center justify-between">
    <a class="w-1/3 max-w-[140px]" href="/">
        <img src="/images/logo.svg" alt="logo" class="w-full">
    </a>
    <input class="peer hidden" type="checkbox" id="menu">
    <label class="bg-hamburger-icon w-6 h-5 bg-cover bg-center cursor-pointer peer-checked:bg-close-icon transition-all z-50 md:hidden" for="menu"></label>
    <div class="fixed inset-0 bg-gradient-to-b from-white/70 to-black/70 text-center translate-x-full peer-checked:translate-x-0 transition-transform md:static md:bg-none md:translate-x-0">
        <ul class="absolute inset-x-0 top-24 p-12 w-[90%] mx-auto bg-white grid gap-6 font-bold text-dark-blue rounded-md shadow-2xl md:static md:grid-flow-col md:w-max md:p-0 md:bg-transparent">
            <li><a href="">Pricing</a></li>
            <li><a href="">Product</a></li>
            <li><a href="">About Us</a></li>
            <li><a href="">Careers</a></li>
            <li><a href="">Community</a></li>
        </ul>
    </div>
    <ButtonLink href="#" isHidden={true}>
        Get Stared
    </ButtonLink>
</nav>